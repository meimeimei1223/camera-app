{
  "productName": "Camera Viewer",
  "version": "0.1.0",
  "identifier": "com.example.camera-viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Camera Viewer",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "dmg"]
  },
  "plugins": {
    "dialog": {
      "all": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "scope": ["$APPDATA/*", "$DOWNLOAD/*", "$PICTURE/*"]
    }
  }
}